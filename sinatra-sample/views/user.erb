<div class='blog'>
	<h3>Create a blog </h3>
	<form method='post' action='/blogs'>
		<input type='text' name='title'>
		<textarea name='body'></textarea>
		<input type='submit'>
	</form>

</div>

<div class='userSpace'>
	<h2>This is current user: <%= @user1 %></h2>
	<h6 class='six'>and these are his/her lame posts:</h6>
	<% @blogs.each do |b| %>
	<div class='title'> Title <%= b.title %> </div> 
	<div class='body'> Body <%= b.body %> </div>
	<% end %>
</div>
<hr>
<div class='signForm'>
<form method='post' action='/sign_out'>
<input type='submit' name='submit' value='log out'>
</form>

</div>



